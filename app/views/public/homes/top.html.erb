<div class="container">

  <% if flash[:notice] %>
   <div class="notice-red">
     <%= flash[:notice] %>
   </div>
  <% end %>


  <div class="background-image" >
   <div class="home-title">
      <h1>
      　プロテインマニア
      </h1>
   </div>
  </div>

 <p>一食当たり</p>

 <%= form_with model: @item, url: search_path, method: :get do |form| %>

  <div class="form-group row pt-2">
   <div class="col-2 pl-5">
    カロリー
   </div>
   <div class="col-10">
     <%= form.text_field :low_kcal %>
     ～
     <%= form.text_field :high_kcal %> kcal
   </div>
  </div>

  <div class="form-group row">
   <div class="col-2 pl-5">
    タンパク質
   </div>
   <div class="col-10">
     <%= form.text_field :low_protein %>
     ～
     <%= form.text_field :high_protein %> g以下
   </div>
  </div>

  <div class="form-group row">
   <div class="col-2 pl-5">
    脂質
   </div>
   <div class="col-10">
     <%= form.text_field :fat %> g以下
   </div>
  </div>

  <div class="form-group row">
   <div class="col-2 pl-5">
    炭水化物
   </div>
   <div class="col-10">
     <%= form.text_field :carbohydrate %> g以下
   </div>
  </div>

  <div class="pr_200-submit">
   <button type="submit" class="btn btn-primary">検索</button>
  </div>

 <% end %>

</div>