<div class="container">

  <div class="row">
    <div class="col-3">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-9">
      <h5>
        <%= @item.name %>
      </h5>
      <table class="table">
        <tbody>
          <tr>
            <td>
              ブランド
            </td>
            <td>
              <%= @item.brand %>
            </td>
          </tr>
          <tr>
            <td>
              風味
            </td>
            <td>
              <%= @item.flavor %>
            </td>
          </tr>
          <tr>
            <td>
              内容量
            </td>
            <td>
              <%= @item.volume %>
            </td>
          </tr>
          <tr>
            <td>
              プロテインの種類
            </td>
            <td>
              <%= @item.protein_type %>
            </td>
          </tr>
          <tr>
            <td>
              金額
            </td>
            <td>
              <%= @item.price %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-9">
      <h5>一食当たり</h5>
       <table class="table">
          <tbody>
            <tr>
              <td>
                カロリー
              </td>
              <td>
                <%= @item.kcal %>
              </td>
              <td>
                たんぱく質
              </td>
              <td>
                <%= @item.protein %>
              </td>
            </tr>
            <tr>
              <td>
                脂質
              </td>
              <td>
                <%= @item.fat %>
              </td>
              <td>
                炭水化物
              </td>
              <td>
                <%= @item.carbohydrate %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>

  <p>最新レビュー</p>

  <% @reviews.each do |review| %>
  <div class="row">
    <div class="col-3">
     <div class="show">
       <% if review.user.image.attached? %>
        <%= image_tag review.user.image, size: "100x100" %>
       <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
       <% end %>
     </div>
     <div class="show-name">
       <%= review.user.name %>
     </div>
    </div>
    <div class="col-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td style="width: 10%">
             飲みやすさ：<%= review.ease_i18n %>
            </td>
            <td style="width: 10%">
             味：<%= review.taste_i18n %>
            </td>
            <td style="width: 10%">
             購入目的：<%= review.purpose_i18n %>
            </td>
           </tr>
        </tbody>
     </table>
      <p>
       <%= review.addition %>
      </p>
    </div>
  </div>
  <% end %>

  <div class="item_show">
    <%= link_to "すべてのレビューを表示＞", item_reviews_path(@item.id), class: "btn btn-primary" %>
  </div>
  <div class="item_show">
    <%= link_to "レビューを投稿する", new_item_review_path(@item.id), class: "btn btn-primary" %>
  </div>

</div>

