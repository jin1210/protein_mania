<div class="container">
  
  <div class="row">
    <div class="col-3">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-9">
      <p>
        <%= @item.name %>
      </p>
      <p>
        ブランド：<%= @item.brand %>
      </p>
      <p>
        風味：<%= @item.flavor %>
      </p>
      <p>
        内容量：<%= @item.volume %>
      </p>
      <p>
        プロテインの種類：<%= @item.type %>
      </p>
      <p>
        金額：<%= @item.price %>
      </p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-9">
      <p>
        一食当たり
      </p>
      <p>
        <%= @item.kcal %>
        <%= @item.protein %>
      </p>
      <p>
        <%= @item.fat %>
        <%= @item.carbohydrate %>
      </p>
    </div>
  </div>
  
  <p>最新レビュー</p>
  
  <% @reviews.each do |review| %>
  <div class="row">
    <div class="col-3">
      <%= review.user.image %>
      <%= review.user.name %>
    </div>
    <div class="col-9">
      <p>
       <%= review.ease_i18n %>
       <%= review.taste_i18n %>
       <%= review.purpose_i18n %>
      </p>
      <p>
       <%= review.addition %>
      </p>
    </div>
  </div>
  <% end %>
  
  <div class="item_show">
    <%= link_to "すべてのレビューを表示＞", reviews_path %>
  </div>
  <div class="item_show">
    <%= link_to "レビューを投稿する", new_review_path %>
  </div>

</div>
  
      