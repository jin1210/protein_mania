<div class="container">

  <% if flash[:notice] %>
   <p>
     <%= flash[:notice] %>
   </p>
  <% end %>

 <h4>商品レビュー</h4>

  <div class="row">
   <div class="col-6">
     <%= @review.item.image %>
   </div>
   <div class="col-6">
     <%= @review.item.name %>
   </div>
  </div>

 <%= form_with model: @review, url: reviews_path, method: :post |f| %>

 <div class="row">
   <%= f.label :ease, "飲みやすさ" %>
   <%= f.select :ease, options_from_collection_for_select(Review.all, :taste) %>
 </div>
 <div class="row">
   <%= f.label :taste, "味" %>
   <%= f.select :taste, options_from_collection_for_select(Review.all, :taste) %>
 </div>
 <div class="row">
   <%= f.label :purpose, "購入目的" %>
   <%= f.select :purpose, options_from_collection_for_select(Review.all, :purpose) %>
 </div>
  <div class="row">
   <%= f.label :addition, "レビューを追加" %>
   <%= f.text_area :addition %>
 </div>

 <button type ="submit" class="btn btn-primary">投稿</button>

 <% end %>

</div>