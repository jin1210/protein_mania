<div class="container">

  <% if flash[:notice] %>
   <div class="notice-red">
     <%= flash[:notice] %>
   </div>
  <% end %>

  <h4>商品レビュー</h4>

  <div class="row mt-3">
   <div class="col-3">
     <%= image_tag @item.image, size: "200x200" %>
   </div>
   <div class="col-5 mt-5">
     <h5><%= @item.name %></h5>
   </div>
  </div>
  <div class="row justify-content-md-center mt-3">
   <div class="col-6">
    <%= form_with model: @review, url: item_reviews_path(@item.id), method: :post do |f| %>
     <table class="table table-borderless">
      <tbody>
       <tr>
        <td>
         <%= f.label :ease, "飲みやすさ" %>
        </td>
        <td>
         <%= f.select :ease, options_for_select(Review.eases.map{|k, v| [I18n.t("enums.review.ease.#{k}"), k]}), {include_blank: '選択してください'}, {class: 'form-control'} %>
        </td>
       </tr>
       <tr>
        <td>
         <%= f.label :taste, "味" %>
        </td>
        <td>
         <%= f.select :taste, options_for_select(Review.tastes.map{|k, v| [I18n.t("enums.review.taste.#{k}"), k]}), {include_blank: '選択してください'}, {class: 'form-control'} %>
        </td>
       </tr>
       <tr>
        <td>
         <%= f.label :purpose, "購入目的" %>
        </td>
        <td>
         <%= f.select :purpose, options_for_select(Review.purposes.map{|k, v| [I18n.t("enums.review.purpose.#{k}"), k]}), {include_blank: '選択してください'}, {class: 'form-control'} %>
        </td>
       </tr>
       <tr>
        <td>
         <%= f.label :addition, "レビューを追加" %>
        </td>
        <td>
         <%= f.text_area :addition, class: 'form-control', size: "4x4" %>
        </td>
       </tr>
      </tbody>
     </table>
     <div class="pt_50-link">
      <button type ="submit" class="btn btn-primary">投稿</button>
    <% end %>
     </div>
   </div>
  </div>

</div>