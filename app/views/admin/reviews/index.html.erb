<div class="container">

 <div class="mt-5">
  <h4><%= @user.name %>さんのレビュー一覧</h4>
 </div>


   <% @reviews.each do |review| %>

   <div class="row mt-5">
    <div class="col-4">
     <div class="flex">
      <%= image_tag review.item.image, size: "100x100" %>
      <p class="mt-3 ml-2">
       <%= review.item.name %>
      </p>
     </div>
    </div>
    <div class="col-6">
     <table class="table table-borderless">
      <tbody>
       <tr>
        <td>
         飲みやすさ：<%= review.ease_i18n %>
        </td>
        <td>
         味：<%= review.taste_i18n %>
        </td>
        <td>
         購入目的：<%= review.purpose_i18n %>
        </td>
       </tr>
       <tr>
        <td colspan="3">
         <%= review.addition %>
        </td>
       </tr>
      </tbody>
     </table>
    </div>

    <div class="col-2 mt-3">
     <%= link_to "削除する", admin_user_review_path(@user.id,review.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-danger' %>
    </div>
  </div>
 <% end %>

 <%= paginate @reviews, theme: 'bootstrap-5' %>

</div>