<div class="container">

  <div class="row">
    <div class="col-2">
     <h4>商品一覧</h4>
    </div>
    <div class="col-10">
      <%= link_to "新規登録", new_admin_item_path, class:"btn btn-primary" %>
    </div>
  </div>

  <% @items.each do |item| %>

    <table class="table">
      <tbody>
        <td>
          <%= image_tag item.image, size: "100x100" %>
        </td>
        <td>
          <% link_to admin_item_path(item.id) do %>
           <%= item.name %>
          <% end %>
        </td>
      </tbody>
    </table>

  <% end %>

</div>


