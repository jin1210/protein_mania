<div class="container">
  
  <h4><%= @user.name %>さんの会員詳細</h4>
  
  <div class="table">
    <tbody>
      <tr>
        <td>
          会員ID
        </td>
        <td>
          <%= @user.id %>
        </td>
      </tr>
      <tr>
        <td>
          ユーザー画像
        </td>
        <td>
          <%= image_tag @user.image, size: "100x100" %>
        </td>
      </tr>
      <tr>
        <td>
          名前
        </td>
        <td>
          <%= @user.name %>
        </td>
      </tr>
      <tr>
        <td>
          メールアドレス
        </td>
        <td>
          <%= @user.email %>
        </td>
      </tr>
      <tr>
        <td>
          会員ステータス
        </td>
        <td>
          <% if @user.is_active == true %>
           有効
          <% else %>
           無効
          <% end %>
        </td>
      </tr>
    </tbody>
  </div>
  
  <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %>
  <%= link_to "レビュー一覧", >
 